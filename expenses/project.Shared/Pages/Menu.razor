    @if (IsUploadPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsUploadPopupOpen = false">
            <div class="modal-content" style="max-width: 320px; text-align: center; padding: 1.5rem;" @onclick:stopPropagation>
                <h4 style="margin-top: 0; margin-bottom: 1.5rem; color: var(--primary-rose);">Select Image Source</h4>
                <div style="display: flex; gap: 1rem; justify-content: center; margin-bottom: 1.5rem;">
                    <label for="photoInput" class="upload-option-btn"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg><span>Gallery</span></label>
                    <label for="fileInput" class="upload-option-btn"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path><polyline points="13 2 13 9 20 9"></polyline></svg><span>File</span></label>
                </div>
                <button class="btn btn-secondary" style="width: 100%; border-color: #ddd;" @onclick="() => IsUploadPopupOpen = false">Cancel</button>
            </div>
        </div>
    }

    @if (IsAmountPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsAmountPopupOpen = false">
            <div class="modal-content" style="max-width: 350px;" @onclick:stopPropagation>
                <div class="modal-header"><h3>Enter Price</h3><button class="close-btn" @onclick="() => IsAmountPopupOpen = false">&times;</button></div>
                <div class="modal-body">
                    <div class="keypad-display">@_tempAmountString</div>
                    <div class="keypad-grid">
                        <button class="keypad-btn" @onclick='() => AppendToAmount("1")'>1</button><button class="keypad-btn" @onclick='() => AppendToAmount("2")'>2</button><button class="keypad-btn" @onclick='() => AppendToAmount("3")'>3</button>
                        <button class="keypad-btn" @onclick='() => AppendToAmount("4")'>4</button><button class="keypad-btn" @onclick='() => AppendToAmount("5")'>5</button><button class="keypad-btn" @onclick='() => AppendToAmount("6")'>6</button>
                        <button class="keypad-btn" @onclick='() => AppendToAmount("7")'>7</button><button class="keypad-btn" @onclick='() => AppendToAmount("8")'>8</button><button class="keypad-btn" @onclick='() => AppendToAmount("9")'>9</button>
                        <button class="keypad-btn" @onclick='() => AppendToAmount(".")'>.</button><button class="keypad-btn" @onclick='() => AppendToAmount("0")'>0</button><button class="keypad-btn" @onclick="BackspaceAmount">⌫</button>
                    </div>
                    <div style="margin-top: 1rem; display: flex; gap: 10px;"><button class="btn btn-secondary" style="flex: 1;" @onclick="ClearAmount">Clear</button><button class="btn btn-primary" style="flex: 1;" @onclick="SaveAmount">Done</button></div>
                </div>
            </div>
        </div>
    }

    @if (IsFilterStationPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsFilterStationPopupOpen = false">
            <div class="modal-content" style="max-width: 400px; height: 60vh; display: flex; flex-direction: column;" @onclick:stopPropagation>
                <div class="modal-header"><h3>Filter by Station</h3><button class="close-btn" @onclick="() => IsFilterStationPopupOpen = false">&times;</button></div>
                <div style="padding: 1rem; border-bottom: 1px solid #eee;"><input type="text" class="search-control" placeholder="Search station..." @bind="_stationSearchQuery" @bind:event="oninput" /></div>
                <ul class="selection-list" style="flex: 1; overflow-y: auto;">
                    <li class="selection-item" @onclick='() => SelectStationFilter("")'>
                        <div>All Stations</div>@if(string.IsNullOrEmpty(FilterStation)) {
                        <span style="color: var(--icon-gold);">✔</span>
                    }
                </li>
                @foreach (var station in FilteredStations)
                {
                    <li class="selection-item" @onclick="() => SelectStationFilter(station.Name)">
                        <div><div>@station.Name</div><span class="selection-subtext">@station.Type</span></div>@if(FilterStation == station.Name) {
                        <span style="color: var(--icon-gold);">✔</span>
                    }
                </li>
                                }
            </ul>
        </div>
    </div>
        }

    @if (IsStationPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsStationPopupOpen = false">
            <div class="modal-content" style="max-width: 400px; height: 60vh; display: flex; flex-direction: column;" @onclick:stopPropagation>
                <div class="modal-header"><h3>Select Station</h3><button class="close-btn" @onclick="() => IsStationPopupOpen = false">&times;</button></div>
                <div style="padding: 1rem; border-bottom: 1px solid #eee;"><input type="text" class="search-control" placeholder="Search..." @bind="_stationSearchQuery" @bind:event="oninput" /></div>
                <ul class="selection-list" style="flex: 1; overflow-y: auto;">
                    @foreach (var station in FilteredStations)
                    {
                        <li class="selection-item" @onclick="() => SelectStation(station.Name)">
                            <div><div>@station.Name</div><span class="selection-subtext">@station.Type</span></div>@if(NewItem.Station == station.Name) {
                            <span style="color: var(--icon-gold);">✔</span>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
        }

    @if (IsCategoryPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsCategoryPopupOpen = false">
            <div class="modal-content" style="max-width: 400px;" @onclick:stopPropagation>
                <div class="modal-header"><h3>Select Category</h3><button class="close-btn" @onclick="() => IsCategoryPopupOpen = false">&times;</button></div>
                <ul class="selection-list">
                    @foreach (var cat in Categories)
                    {
                        <li class="selection-item" @onclick="() => SelectCategoryFromPopup(cat)">
                            <div style="display: flex; align-items: center; gap: 10px;">@((MarkupString)GetIconForCategory(cat)) @cat</div>@if(NewItem.MenuCategory == cat) {
                            <span style="color: var(--icon-gold);">✔</span>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
        }

    @if (IsSubCategoryPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsSubCategoryPopupOpen = false">
            <div class="modal-content" style="max-width: 400px; max-height: 70vh; overflow-y: auto;" @onclick:stopPropagation>
                <div class="modal-header"><h3>Select Sub-Category</h3><button class="close-btn" @onclick="() => IsSubCategoryPopupOpen = false">&times;</button></div>
                <ul class="selection-list">
                    @if (CategoryData.ContainsKey(NewItem.MenuCategory))
                    {
                        @foreach (var sub in CategoryData[NewItem.MenuCategory])
                        {
                            <li class="selection-item" @onclick="() => SelectSubCategory(sub.Name)">
                                <div><div>@sub.Name</div><span class="selection-subtext">@sub.Description</span></div>@if(NewItem.SubCategory == sub.Name) {
                                <span style="color: var(--icon-gold);">✔</span>
                            }
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
        }

    <InputFile id="photoInput" OnChange="HandleFileSelected" style="display:none;" accept="image/*" />
    <InputFile id="fileInput" OnChange="HandleFileSelected" style="display:none;" />

    <script>
        window.downloadFile = (fileName, contentType, base64) => {
            const link = document.createElement('a');
            link.download = fileName;
            link.href = `data:${contentType};base64,${base64}`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
</div>