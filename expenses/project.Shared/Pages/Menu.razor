@page "/menu"
@layout project.Shared.Layout.EmptyLayout
@using project.Shared.Model
@using project.Shared.Pages

<!-- Layout-specific body override to prevent scrolling issues -->
<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }
</style>

<div class="menu-container">

    <!-- MOBILE SIDEBAR OVERLAY -->
    @if (IsSidebarOpen)
    {
        <div class="sidebar-overlay" @onclick="ToggleSidebar"></div>
    }

    <!-- LEFT SIDEBAR -->
    <div class="sidebar-custom @(IsSidebarOpen ? "open" : "")">

        <button class="close-sidebar-btn" @onclick="GoToProfile" title="Back to Profile" style="margin-bottom: 1rem;">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>

        <h1 class="app-brand">Menu</h1>

        <!-- ITEM SECTION -->
        <div class="filter-group" style="margin-bottom: 0.5rem;">
            <label>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 7h-9"></path><path d="M14 17H5"></path><circle cx="17" cy="17" r="3"></circle><circle cx="7" cy="7" r="3"></circle></svg>
                Item
            </label>
        </div>

        <div class="category-item @(SelectedView == "Service" ? "active" : "")" @onclick='() => SelectView("Service")'>
            <svg class="cat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
            <div class="cat-content"><span>Service</span></div>
        </div>

        <div class="category-item @(SelectedView == "Product" ? "active" : "")" @onclick='() => SelectView("Product")'>
            <svg class="cat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
            <div class="cat-content"><span>Product</span></div>
        </div>

        <div class="category-item @(SelectedView == "Package" ? "active" : "")" @onclick='() => SelectView("Package")'>
            <svg class="cat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 16 12 12 8 16"></polyline><line x1="12" y1="12" x2="12" y2="21"></line><path d="M20.39 18.39A5 5 0 0 0 18 9h-1.26A8 8 0 1 0 3 16.3"></path><polyline points="16 16 12 12 8 16"></polyline></svg>
            <div class="cat-content"><span>Package</span></div>
        </div>

        <div class="category-item @(SelectedView == "Discount" ? "active" : "")" @onclick='() => SelectView("Discount")'>
            <svg class="cat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="5" x2="5" y2="19"></line><circle cx="6.5" cy="6.5" r="2.5"></circle><circle cx="17.5" cy="17.5" r="2.5"></circle></svg>
            <div class="cat-content"><span>Discount</span></div>
        </div>

        <!-- MENU SECTION -->
        <div class="filter-group" style="margin-top: 2rem; margin-bottom: 0.5rem;">
            <label>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path></svg>
                Menu
            </label>
        </div>

        <div class="category-item @(SelectedView == "Custom Menu" ? "active" : "")" @onclick='() => SelectView("Custom Menu")'>
            <svg class="cat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>
            <div class="cat-content"><span>Custom Menu</span></div>
        </div>

        <div class="category-item @(SelectedView == "Online Menu" ? "active" : "")" @onclick='() => SelectView("Online Menu")'>
            <svg class="cat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
            <div class="cat-content"><span>Online Menu</span></div>
        </div>

        <div class="category-item @(SelectedView == "Catalog" ? "active" : "")" @onclick='() => SelectView("Catalog")'>
            <svg class="cat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path></svg>
            <div class="cat-content"><span>Catalog</span></div>
        </div>

    </div>

    <!-- RIGHT CONTENT -->
    <div class="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="mobile-menu-btn" @onclick="ToggleSidebar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="3" y1="12" x2="21" y2="12"></line>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <line x1="3" y1="18" x2="21" y2="18"></line>
                    </svg>
                </button>

                <div class="page-title">
                    <h2>@SelectedView</h2>
                    <span>Management</span>
                </div>
            </div>

            <button class="add-btn" @onclick="OpenAddModal" title="Add New Item">
                +
            </button>
        </div>

        @if (new[] { "Service", "Product", "Package", "Discount" }.Contains(SelectedView))
        {
            <div class="action-bar-container">
                <!-- TOP TOOLBAR -->
                <div class="filters-bar">
                    <div style="position: relative; flex: 1; min-width: 200px;">
                        <input type="text" class="search-filter-control" style="width: 100%; padding-left: 2.2rem;" placeholder="Search @SelectedView..." @bind="FilterSearchQuery" @bind:event="oninput" />
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="position: absolute; left: 0.8rem; top: 50%; transform: translateY(-50%);">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                    </div>

                    <button class="icon-btn-square @(IsFilterVisible ? "active" : "")" title="Filter" @onclick="ToggleFilterVisibility">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
                        </svg>
                    </button>

                    <button class="icon-btn-square" title="Download PDF" @onclick='() => DownloadReport("pdf")'>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                            <line x1="12" y1="18" x2="12" y2="12"></line>
                            <line x1="9" y1="15" x2="15" y2="15"></line>
                        </svg>
                    </button>

                    <button class="icon-btn-square" title="Settings">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                        </svg>
                    </button>
                </div>

                <!-- EXPANDABLE FILTER OPTIONS -->
                @if (IsFilterVisible)
                {
                    <div class="extended-filters">
                        <select class="search-filter-control" @bind="SortOption">
                            <option value="NameAsc">Name (A-Z)</option>
                            <option value="NameDesc">Name (Z-A)</option>
                            <option value="PriceAsc">Price (Low-High)</option>
                            <option value="PriceDesc">Price (High-Low)</option>
                        </select>

                        <div class="search-filter-control" @onclick="OpenFilterStationPopup" style="cursor: pointer; display: flex; align-items: center; justify-content: space-between;">
                            <span>@(string.IsNullOrEmpty(FilterStation) ? "All Stations" : FilterStation)</span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="6 9 12 15 18 9"></polyline>
                            </svg>
                        </div>
                    </div>
                }

                <!-- SEC BUTTONS ROW -->
                <div class="secs-scroll-area">
                    <button class="sec-btn @(SelectedSec == "All" ? "active" : "")" @onclick='() => SelectSec("All")'>All</button>

                    @foreach (var sec in AvailableSecs)
                    {
                        <button class="sec-btn @(SelectedSec == sec ? "active" : "")" @onclick='() => SelectSec(sec)'>@sec</button>
                    }
                </div>
            </div>
        }

        <div class="content-area">
            <div class="expense-list">
                @foreach (var item in FilteredItems)
                {
                    <div class="expense-card">
                        <div class="expense-card-icon">
                            @((MarkupString)GetIconForCategory(item.MenuCategory))
                        </div>
                        <div class="expense-details">
                            <div class="expense-title">@item.ItemName</div>
                            <div class="expense-meta">
                                <span>@item.MenuCategory @(!string.IsNullOrEmpty(item.SubCategory) ? $"• {item.SubCategory}" : "")</span>
                                <span>• @item.Station</span>
                                <span style="color: @(item.IsAvailable ? "#28a745" : "#dc3545"); font-weight: 600;">
                                    • @(item.IsAvailable ? "In Stock" : "Sold Out")
                                </span>
                            </div>
                        </div>
                        <div class="expense-amount-display">
                            <span>MYR @item.Price.ToString("N2")</span>
                            <button class="action-btn info-btn" title="View Details" @onclick="() => ShowItemDetails(item)">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <line x1="12" y1="16" x2="12" y2="12"></line>
                                    <line x1="12" y1="8" x2="12.01" y2="8"></line>
                                </svg>
                            </button>
                            <button class="action-btn delete-btn" @onclick="() => RequestDelete(item)" title="Delete Item">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="3 6 5 6 21 6"></polyline>
                                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                    <line x1="10" y1="11" x2="10" y2="17"></line>
                                    <line x1="14" y1="11" x2="14" y2="17"></line>
                                </svg>
                            </button>
                        </div>
                    </div>
                }

                @if (!FilteredItems.Any())
                {
                    <div class="empty-state">No items found for @SelectedView.</div>
                }
            </div>
        </div>
    </div>

    <!-- MAIN MODAL OVERLAY -->
    @if (IsModalOpen)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation>
                <div class="modal-header">
                    <h3>@(IsEditing ? "Edit Item" : "Add Item")</h3>
                    <button class="close-btn" @onclick="CloseModal">&times;</button>
                </div>
                <div class="modal-body">
                    <div style="display: flex; gap: 1rem; margin-bottom: 1.25rem;">
                        <div style="flex: 1;">
                            <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg> Status</label>
                            <select class="form-control" @bind="NewItem.IsAvailable">
                                <option value="true">In Stock</option>
                                <option value="false">Sold Out</option>
                            </select>
                        </div>
                        <div style="flex: 1;">
                            <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path><line x1="7" y1="7" x2="7.01" y2="7"></line></svg> Category</label>
                            <div class="form-control clickable" @onclick="() => IsCategoryPopupOpen = true"><span>@NewItem.MenuCategory</span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg> Sub-Category</label>
                        <div class="form-control clickable" @onclick="OpenSubCategoryPopup"><span>@(string.IsNullOrEmpty(NewItem.SubCategory) ? "Select Sub-Category" : NewItem.SubCategory)</span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg></div>
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg> Station</label>
                        <div class="form-control clickable" @onclick="OpenStationPopup"><span style="@(string.IsNullOrEmpty(NewItem.Station) ? "color: #999;" : "")">@(string.IsNullOrEmpty(NewItem.Station) ? "Select Station" : NewItem.Station)</span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg></div>
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg> Item Name</label>
                        <input type="text" class="form-control" placeholder="e.g. Signature Burger" @bind="NewItem.ItemName" />
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg> Price (MYR)</label>
                        <div class="form-control clickable" @onclick="OpenAmountPopup"><span style="font-size: 1.2rem; font-weight: bold; color: var(--primary-rose);">@(NewItem.Price == 0 ? "0.00" : NewItem.Price.ToString("0.00"))</span></div>
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg> Description</label>
                        <textarea class="form-control" rows="2" placeholder="Ingredients, allergies, etc." @bind="NewItem.Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><circle cx="8.5" cy="8.5" r="1.5"></circle><polyline points="21 15 16 10 5 21"></polyline></svg> Item Image</label>
                        <div class="upload-box" @onclick="() => IsUploadPopupOpen = true">
                            <div class="upload-icon"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg></div>
                            <span class="upload-text">Tap to upload Image</span>
                            <span class="upload-subtext">Photo or File</span>
                            @if (!string.IsNullOrEmpty(NewItem.ImageName))
                            {
                                <div style="margin-top: 5px; color: var(--primary-rose); font-size: 0.9rem; font-weight: bold;">Selected: @NewItem.ImageName</div>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="SaveItem">Save Item</button>
                </div>
            </div>
        </div>
    }

    <!-- ERROR MODAL -->
    @if (IsErrorPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2002;" @onclick="CloseErrorPopup">
            <div class="modal-content" style="max-width: 350px; text-align: center; padding: 2rem;" @onclick:stopPropagation>
                <div style="margin-bottom: 1rem; color: #dc3545;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="12"></line>
                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                    </svg>
                </div>
                <h3 style="margin-top: 0; color: #333;">Action Required</h3>
                <p style="color: #666; margin-bottom: 2rem;">@ErrorMessage</p>

                <button class="btn btn-primary" style="width: 100%;" @onclick="CloseErrorPopup">OK</button>
            </div>
        </div>
    }

    @if (IsDeleteConfirmOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="CancelDelete">
            <div class="modal-content" style="max-width: 350px; text-align: center; padding: 2rem;" @onclick:stopPropagation>
                <h3 style="margin-top: 0; color: #5a5a5a;">Delete Item?</h3>
                <p style="color: #666; margin-bottom: 2rem;">Are you sure you want to delete this menu item? This action cannot be undone.</p>
                <div style="display: flex; gap: 1rem; justify-content: center;">
                    <button class="btn btn-secondary" @onclick="CancelDelete" style="flex:1;">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmDelete" style="flex:1;">Delete</button>
                </div>
            </div>
        </div>
    }

    @if (IsDownloadPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsDownloadPopupOpen = false">
            <div class="modal-content" style="max-width: 320px;" @onclick:stopPropagation>
                <div class="modal-header"><h3>Export Menu</h3><button class="close-btn" @onclick="() => IsDownloadPopupOpen = false">&times;</button></div>
