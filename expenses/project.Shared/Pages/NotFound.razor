@page "/404"
@layout project.Shared.Layout.EmptyLayout
@inject NavigationManager Navigation

<style>
    :root {
        --primary-gold: #A38F36;
        --secondary-grey: #CEC6C3;
        --dusty-rose: #D4B2A8;
        --beige-bg: #E7D7C8;
        --off-white-bg: #EDEAE3;
    }

    .not-found-container {
        height: 100vh;
        width: 100vw;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: var(--off-white-bg);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
        color: #4a4a4a;
    }

    .error-code {
        font-size: 8rem;
        font-weight: 900;
        margin: 0;
        color: var(--primary-gold);
        line-height: 1;
        text-shadow: 4px 4px 0px var(--beige-bg);
    }

    .error-title {
        font-size: 2rem;
        margin-top: 1rem;
        color: #5a5a5a;
    }

    .error-message {
        color: #888;
        margin-bottom: 2.5rem;
        font-size: 1.1rem;
    }

    .home-btn {
        background-color: var(--primary-gold);
        color: white;
        border: none;
        padding: 0.8rem 2rem;
        font-size: 1rem;
        border-radius: 50px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.2s ease;
        box-shadow: 0 4px 10px rgba(163, 143, 54, 0.3);
    }

        .home-btn:hover {
            background-color: var(--dusty-rose);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(212, 178, 168, 0.4);
        }
</style>

<div class="not-found-container">
    <h1 class="error-code">404</h1>
    <h2 class="error-title">Page Not Found</h2>
    <p class="error-message">The page you are looking for isn't here.</p>

    <button class="home-btn" @onclick="GoHome">
        Back to Dashboard
    </button>
</div>

@code {
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }
}