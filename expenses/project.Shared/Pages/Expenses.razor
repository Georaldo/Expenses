
@page "/expenses"
@layout project.Shared.Layout.EmptyLayout
@using project.Shared.Model
@using project.Shared.Pages

<!-- Global style override for this page layout -->
<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }
</style>

<div class="expenditure-container">

    <!-- MOBILE SIDEBAR OVERLAY -->
    @if (IsSidebarOpen)
    {
        <div class="sidebar-overlay" @onclick="ToggleSidebar"></div>
    }

    <!-- LEFT SIDEBAR -->
    <div class="sidebar-custom @(IsSidebarOpen ? "open" : "")">

        <button class="close-sidebar-btn" @onclick="GoToProfile" title="Back to Profile" style="margin-bottom: 1rem;">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>

        <h1 class="app-brand">Expense</h1>

        <div class="filter-group" style="margin-bottom: 1rem;">
            <label>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                Period
            </label>
            <div class="date-selectors">
                <select @bind="SelectedMonth">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                    }
                </select>
                <select @bind="SelectedYear">
                    @for (int i = 2020; i <= 2040; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>
        </div>

        <!-- All Expenses Button -->
        <div class="category-item @(SelectedCategory == "All Expenses" ? "active" : "")"
             @onclick="SelectAllExpenses"
             style="margin-bottom: 1rem; border-radius: 8px;">
            <svg class="cat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
                <polyline points="2 17 12 22 22 17"></polyline>
                <polyline points="2 12 12 17 22 12"></polyline>
            </svg>
            <div class="cat-content">
                <span>All Expenses</span>
                <span class="cat-amount">@GetCategoryTotal(null)</span>
            </div>
        </div>

        <div class="filter-group filter-group-flex">
            <label>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="8" y1="6" x2="21" y2="6"></line>
                    <line x1="8" y1="12" x2="21" y2="12"></line>
                    <line x1="8" y1="18" x2="21" y2="18"></line>
                    <line x1="3" y1="6" x2="3.01" y2="6"></line>
                    <line x1="3" y1="12" x2="3.01" y2="12"></line>
                    <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
                Categories
            </label>
            <ul class="category-list">
                @foreach (var cat in Categories)
                {
                    <li class="category-item @(SelectedCategory == cat ? "active" : "")"
                        @onclick="() => SelectCategory(cat)">

                        @((MarkupString)GetIconForCategory(cat))

                        <div class="cat-content">
                            <span>@cat</span>
                            <span class="cat-amount">@GetCategoryTotal(cat)</span>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- RIGHT CONTENT -->
    <div class="main-content">
        <div class="top-bar">
            <div class="top-bar-left">
                <button class="mobile-menu-btn" @onclick="ToggleSidebar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="3" y1="12" x2="21" y2="12"></line>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <line x1="3" y1="18" x2="21" y2="18"></line>
                    </svg>
                </button>

                <div class="page-title">
                    <h2>@(SelectedCategory == "All Expenses" ? SelectedCategory : $"{SelectedCategory} Expense")</h2>
                    <span>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(SelectedMonth) @SelectedYear</span>
                </div>
            </div>

            <button class="add-btn" @onclick="OpenAddModal" title="Add New">
                +
            </button>
        </div>

        @if (SelectedCategory == "All Expenses")
        {
            <div class="filters-bar">
                <div style="position: relative; flex: 1; min-width: 200px;">
                    <input type="text" class="search-filter-control" style="width: 100%; padding-left: 2.2rem;" placeholder="Search expenses..." @bind="FilterSearchQuery" @bind:event="oninput" />
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="position: absolute; left: 0.8rem; top: 50%; transform: translateY(-50%);">
                        <circle cx="11" cy="11" r="8"></circle>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                    </svg>
                </div>

                <select class="search-filter-control" @bind="SortOption" style="min-width: 160px;">
                    <option value="DateDesc">Date (Newest)</option>
                    <option value="NameAsc">Name (A-Z)</option>
                    <option value="NameDesc">Name (Z-A)</option>
                    <option value="AmountAsc">Price (Low-High)</option>
                    <option value="AmountDesc">Price (High-Low)</option>
                </select>

                <select class="search-filter-control" @bind="FilterCategory">
                    <option value="">All Categories</option>
                    @foreach (var cat in Categories)
                    {
                        <option value="@cat">@cat</option>
                    }
                </select>

                <div class="search-filter-control" @onclick="OpenFilterStaffPopup" style="cursor: pointer; display: flex; align-items: center; justify-content: space-between;">
                    <span>@(string.IsNullOrEmpty(FilterStaff) ? "All Staff" : FilterStaff)</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                </div>

                <button class="icon-btn" @onclick="() => IsDownloadPopupOpen = true">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                    </svg>
                    Download
                </button>
            </div>
        }

        <div class="content-area">
            <div class="expense-list">
                @foreach (var expense in FilteredExpenses)
                {
                    <div class="expense-card">
                        <div class="expense-card-icon">
                            @((MarkupString)GetIconForCategory(expense.Category))
                        </div>
                        <div class="expense-details">
                            <div class="expense-title">@expense.InvoiceTitle</div>
                            <div class="expense-meta">
                                <span>@expense.Category @(!string.IsNullOrEmpty(expense.SubCategory) ? $"• {expense.SubCategory}" : "")</span>
                                <span>• @expense.Date.ToString("dd MMM yyyy")</span>
                                <span>• @expense.Staff</span>
                            </div>
                        </div>
                        <div class="expense-amount-display">
                            <span>MYR @expense.Amount.ToString("N2")</span>
                            <button class="action-btn info-btn" title="View Details" @onclick="() => ShowExpenseDetails(expense)">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <line x1="12" y1="16" x2="12" y2="12"></line>
                                    <line x1="12" y1="8" x2="12.01" y2="8"></line>
                                </svg>
                            </button>
                            <button class="action-btn delete-btn" @onclick="() => RequestDelete(expense)" title="Delete Record">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="3 6 5 6 21 6"></polyline>
                                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                    <line x1="10" y1="11" x2="10" y2="17"></line>
                                    <line x1="14" y1="11" x2="14" y2="17"></line>
                                </svg>
                            </button>
                        </div>
                    </div>
                }

                @if (!FilteredExpenses.Any())
                {
                    <div class="empty-state">No expenses found for this period.</div>
                }
            </div>
        </div>
    </div>

    <!-- MAIN MODAL OVERLAY -->
    @if (IsModalOpen)
    {
        <div class="modal-overlay" @onclick="CloseModal">
            <div class="modal-content" @onclick:stopPropagation>
                <div class="modal-header">
                    <h3>@(IsEditing ? "Edit Expense" : "Add Expense")</h3>
                    <button class="close-btn" @onclick="CloseModal">&times;</button>
                </div>
                <div class="modal-body">
                    <div style="display: flex; gap: 1rem; margin-bottom: 1.25rem;">
                        <div style="flex: 1;">
                            <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg> Date</label>
                            <input type="date" class="form-control" @bind="NewExpense.Date" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                        <div style="flex: 1;">
                            <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path><line x1="7" y1="7" x2="7.01" y2="7"></line></svg> Category</label>
                            <div class="form-control clickable" @onclick="() => IsCategoryPopupOpen = true"><span>@NewExpense.Category</span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg> Sub-Category</label>
                        <div class="form-control clickable" @onclick="OpenSubCategoryPopup"><span>@(string.IsNullOrEmpty(NewExpense.SubCategory) ? "Select Sub-Category" : NewExpense.SubCategory)</span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg></div>
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg> Staff</label>
                        <div class="form-control clickable" @onclick="OpenStaffPopup"><span style="@(string.IsNullOrEmpty(NewExpense.Staff) ? "color: #999;" : "")">@(string.IsNullOrEmpty(NewExpense.Staff) ? "Select Staff Member" : NewExpense.Staff)</span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg></div>
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg> Invoice Title</label>
                        <input type="text" class="form-control" placeholder="e.g. Monthly Server Maintenance" @bind="NewExpense.InvoiceTitle" />
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="1" x2="12" y2="23"></line><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path></svg> Amount (MYR)</label>
                        <div class="form-control clickable" @onclick="OpenAmountPopup"><span style="font-size: 1.2rem; font-weight: bold; color: var(--primary-rose);">@(NewExpense.Amount == 0 ? "0.00" : NewExpense.Amount.ToString("0.00"))</span></div>
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg> Remark</label>
                        <textarea class="form-control" rows="2" placeholder="Add any optional details here..." @bind="NewExpense.Remark"></textarea>
                    </div>
                    <div class="form-group">
                        <label><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="var(--primary-gold)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"></path></svg> Invoice</label>
                        <div class="upload-box" @onclick="() => IsUploadPopupOpen = true">
                            <div class="upload-icon"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg></div>
                            <span class="upload-text">Tap to upload Invoice</span>
                            <span class="upload-subtext">Photo or File</span>
                            @if (!string.IsNullOrEmpty(NewExpense.FileName))
                            {
                                <div style="margin-top: 5px; color: var(--primary-rose); font-size: 0.9rem; font-weight: bold;">Selected: @NewExpense.FileName</div>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="SaveExpenditure">Save Record</button>
                </div>
            </div>
        </div>
    }

    <!-- ERROR MODAL (New) -->
    @if (IsErrorPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2002;" @onclick="CloseErrorPopup">
            <div class="modal-content" style="max-width: 350px; text-align: center; padding: 2rem;" @onclick:stopPropagation>
                <div style="margin-bottom: 1rem; color: #dc3545;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="12"></line>
                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                    </svg>
                </div>
                <h3 style="margin-top: 0; color: #333;">Action Required</h3>
                <p style="color: #666; margin-bottom: 2rem;">@ErrorMessage</p>

                <button class="btn btn-primary" style="width: 100%;" @onclick="CloseErrorPopup">OK</button>
            </div>
        </div>
    }

    @if (IsDeleteConfirmOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="CancelDelete">
            <div class="modal-content" style="max-width: 350px; text-align: center; padding: 2rem;" @onclick:stopPropagation>
                <h3 style="margin-top: 0; color: #5a5a5a;">Delete Expense?</h3>
                <p style="color: #666; margin-bottom: 2rem;">Are you sure you want to delete this record? This action cannot be undone.</p>
                <div style="display: flex; gap: 1rem; justify-content: center;">
                    <button class="btn btn-secondary" @onclick="CancelDelete" style="flex:1;">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmDelete" style="flex:1;">Delete</button>
                </div>
            </div>
        </div>
    }

    @if (IsDownloadPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsDownloadPopupOpen = false">
            <div class="modal-content" style="max-width: 320px;" @onclick:stopPropagation>
                <div class="modal-header"><h3>Download Report</h3><button class="close-btn" @onclick="() => IsDownloadPopupOpen = false">&times;</button></div>
                <div class="modal-body" style="padding: 1.5rem;">
                    <div class="download-option-item" @onclick='() => DownloadReport("csv")'><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#28a745" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg><div style="display:flex; flex-direction:column;"><span style="font-weight:600;">Export to CSV</span><span style="font-size:0.8rem; color:#888;">Spreadsheet format</span></div></div>
                    <div class="download-option-item" @onclick='() => DownloadReport("pdf")'><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#dc3545" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg><div style="display:flex; flex-direction:column;"><span style="font-weight:600;">Export to PDF</span><span style="font-size:0.8rem; color:#888;">Document format</span></div></div>
                </div>
            </div>
        </div>
    }

    @if (IsUploadPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsUploadPopupOpen = false">
            <div class="modal-content" style="max-width: 320px; text-align: center; padding: 1.5rem;" @onclick:stopPropagation>
                <h4 style="margin-top: 0; margin-bottom: 1.5rem; color: var(--primary-rose);">Select Upload Type</h4>
                <div style="display: flex; gap: 1rem; justify-content: center; margin-bottom: 1.5rem;">
                    <label for="photoInput" class="upload-option-btn"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg><span>Photo</span></label>
                    <label for="fileInput" class="upload-option-btn"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path><polyline points="13 2 13 9 20 9"></polyline></svg><span>File</span></label>
                </div>
                <button class="btn btn-secondary" style="width: 100%; border-color: #ddd;" @onclick="() => IsUploadPopupOpen = false">Cancel</button>
            </div>
        </div>
    }

    @if (IsAmountPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsAmountPopupOpen = false">
            <div class="modal-content" style="max-width: 350px;" @onclick:stopPropagation>
                <div class="modal-header"><h3>Enter Amount</h3><button class="close-btn" @onclick="() => IsAmountPopupOpen = false">&times;</button></div>
                <div class="modal-body">
                    <div class="keypad-display">@_tempAmountString</div>
                    <div class="keypad-grid">
                        <button class="keypad-btn" @onclick='() => AppendToAmount("1")'>1</button><button class="keypad-btn" @onclick='() => AppendToAmount("2")'>2</button><button class="keypad-btn" @onclick='() => AppendToAmount("3")'>3</button>
                        <button class="keypad-btn" @onclick='() => AppendToAmount("4")'>4</button><button class="keypad-btn" @onclick='() => AppendToAmount("5")'>5</button><button class="keypad-btn" @onclick='() => AppendToAmount("6")'>6</button>
                        <button class="keypad-btn" @onclick='() => AppendToAmount("7")'>7</button><button class="keypad-btn" @onclick='() => AppendToAmount("8")'>8</button><button class="keypad-btn" @onclick='() => AppendToAmount("9")'>9</button>
                        <button class="keypad-btn" @onclick='() => AppendToAmount(".")'>.</button><button class="keypad-btn" @onclick='() => AppendToAmount("0")'>0</button><button class="keypad-btn" @onclick="BackspaceAmount">⌫</button>
                    </div>
