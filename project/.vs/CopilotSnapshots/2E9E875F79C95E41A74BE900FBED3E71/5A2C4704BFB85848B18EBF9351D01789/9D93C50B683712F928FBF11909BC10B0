                        @if (string.IsNullOrEmpty(FilterStaff))
                        {
                            <span style="color: var(--icon-gold);">✔</span>
                        }
                    </li>

                    @foreach (var staff in FilteredStaff)
                    {
                        <li class="selection-item" @onclick="() => SelectStaffFilter(staff.Name)">
                            <div>
                                <div>@staff.Name</div>
                                <span class="selection-subtext">@staff.Phone</span>
                            </div>
                            @if (FilterStaff == staff.Name)
                            {
                                <span style="color: var(--icon-gold);">✔</span>
                            }
                        </li>
                    }
                    @if (!FilteredStaff.Any())
                    {
                        <li style="padding: 2rem; text-align: center; color: #999;">
                            No staff found
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    <!-- SUB-POPUP: STAFF SELECTION (Add Expense) -->
    @if (IsStaffPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsStaffPopupOpen = false">
            <div class="modal-content" style="max-width: 400px; height: 60vh; display: flex; flex-direction: column;" @onclick:stopPropagation>
                <div class="modal-header">
                    <h3>Select Staff</h3>
                    <button class="close-btn" @onclick="() => IsStaffPopupOpen = false">&times;</button>
                </div>

                <!-- Search Bar -->
                <div style="padding: 1rem; border-bottom: 1px solid #eee;">
                    <input type="text"
                           class="search-control"
                           placeholder="Search by name or phone..."
                           @bind="_staffSearchQuery"
                           @bind:event="oninput" />
                </div>

                <ul class="selection-list" style="flex: 1; overflow-y: auto;">
                    @foreach (var staff in FilteredStaff)
                    {
                        <li class="selection-item" @onclick="() => SelectStaff(staff.Name)">
                            <div>
                                <div>@staff.Name</div>
                                <span class="selection-subtext">@staff.Phone</span>
                            </div>
                            @if (NewExpense.Staff == staff.Name)
                            {
                                <span style="color: var(--icon-gold);">✔</span>
                            }
                        </li>
                    }
                    @if (!FilteredStaff.Any())
                    {
                        <li style="padding: 2rem; text-align: center; color: #999;">
                            No staff found
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    <!-- SUB-POPUP: CATEGORY SELECTION -->
    @if (IsCategoryPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsCategoryPopupOpen = false">
            <div class="modal-content" style="max-width: 400px;" @onclick:stopPropagation>
                <div class="modal-header">
                    <h3>Select Category</h3>
                    <button class="close-btn" @onclick="() => IsCategoryPopupOpen = false">&times;</button>
                </div>
                <ul class="selection-list">
                    @foreach (var cat in Categories)
                    {
                        <li class="selection-item" @onclick="() => SelectCategoryFromPopup(cat)">
                            <div style="display: flex; align-items: center; gap: 10px;">
                                @((MarkupString)GetIconForCategory(cat))
                                @cat
                            </div>
                            @if (NewExpense.Category == cat)
                            {
                                <span style="color: var(--icon-gold);">✔</span>
                            }
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    <!-- SUB-POPUP: SUB-CATEGORY SELECTION -->
    @if (IsSubCategoryPopupOpen)
    {
        <div class="modal-overlay" style="z-index: 2000;" @onclick="() => IsSubCategoryPopupOpen = false">
            <div class="modal-content" style="max-width: 400px; max-height: 70vh; overflow-y: auto;" @onclick:stopPropagation>
                <div class="modal-header">
                    <h3>Select Sub-Category</h3>
                    <button class="close-btn" @onclick="() => IsSubCategoryPopupOpen = false">&times;</button>
                </div>
                <ul class="selection-list">
                    @if (CategoryData.ContainsKey(NewExpense.Category))
                    {
                        @foreach (var sub in CategoryData[NewExpense.Category])
                        {
                            <li class="selection-item" @onclick="() => SelectSubCategory(sub.Name)">
                                <div>
                                    <div>@sub.Name</div>
                                    <span class="selection-subtext">@sub.Description</span>
                                </div>
                                @if (NewExpense.SubCategory == sub.Name)
                                {
                                    <span style="color: var(--icon-gold);">✔</span>
                                }
                            </li>
                        }
                    }
                    else
                    {
                        <li style="padding: 2rem; text-align: center; color: #999;">
                            No sub-categories available for @NewExpense.Category
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    <!-- HIDDEN INPUTS -->
    <InputFile id="photoInput" OnChange="HandleFileSelected" style="display:none;" accept="image/*" />
    <InputFile id="fileInput" OnChange="HandleFileSelected" style="display:none;" />

    <script>
        window.downloadFile = (fileName, contentType, base64) => {
            const link = document.createElement('a');
            link.download = fileName;
            link.href = `data:${contentType};base64,${base64}`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
</div>

@code {
    // --- State ---
    private int SelectedMonth { get; set; } = DateTime.Now.Month;
    private int SelectedYear { get; set; } = DateTime.Now.Year;
    private string SelectedCategory { get; set; } = "All Expenses";

    // Sidebar State
    private bool IsSidebarOpen { get; set; } = false;

    // Filter States
    private string FilterSearchQuery { get; set; } = "";
    private string FilterCategory { get; set; } = "";
    private string FilterStaff { get; set; } = "";
    private string SortOption { get; set; } = "DateDesc"; // New State

    // Pop-up states
    private bool IsModalOpen { get; set; } = false;
    private bool IsUploadPopupOpen { get; set; } = false;
    private bool IsAmountPopupOpen { get; set; } = false;
    private bool IsStaffPopupOpen { get; set; } = false;
    private bool IsFilterStaffPopupOpen { get; set; } = false; // New Filter Popup
    private bool IsCategoryPopupOpen { get; set; } = false;
    private bool IsSubCategoryPopupOpen { get; set; } = false;
    private bool IsDownloadPopupOpen { get; set; } = false;
    private bool IsDeleteConfirmOpen { get; set; } = false; // Delete Modal State

    // Search & Filter State
    private string _tempAmountString = "0";
    private string _staffSearchQuery = "";
    private ExpenditureItem? _itemToDelete; // To store item pending deletion

    // --- Data Models ---
    private ExpenditureItem NewExpense { get; set; } = new ExpenditureItem();

    // Helper property to check if we are editing an existing item
    private bool IsEditing => ExpensesDb.Any(e => e.Id == NewExpense.Id);

    public class StaffMember
    {
        public string Name { get; set; }
        public string Phone { get; set; }
    }

    public class SubCategoryItem
